{
  "ConnectionStrings": {
    "DefaultConnection": "[Insert your connection string in Secrets.json]"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "IdentityServer": {
    "Clients": {
      "PollsAppBlazor.Client": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
  "Auth": {
    "AccessToken": {
      "ValidAudience": "https://localhost:7093",
      "ValidIssuer": "https://localhost:7093",
      "ExpirationSeconds": "150",
      "ClockSkewSeconds": "5",
      "SecretKey": "<Enter Your Secret Here>"
    },
    "RefreshToken": {
      "Size": "128",
      "ExpirationDays": "90"
    }
  },
  "Uri": {
    "ConfirmEmailUri": "https://localhost:7094/users/confirm-email?userId={0}&token={1}",
    "ResetPasswordUri": "https://localhost:7094/users/reset-password?userId={0}&token={1}"
  },
  "AllowedHosts": "*"
}
